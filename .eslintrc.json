{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier" // Verifique se esta linha est√° correta
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "simple-import-sort",
        "prettier"
    ],
    "rules": {
        "simple-import-sort/imports": "error",
        "quotes": [
            "error",
            "single"
        ],
        "prettier/prettier": "error"
    }
}